<h4 id="heading" class="center">CONTACT US</h4>
<form action="/index/contact" method="POST" class="col s12">
    <div class="row">
        <div class="input-field col s6">
            <i class="material-icons prefix">account_circle</i>
            <input id="icon_prefix" name="name" type="text" class="validate">
            <label for="icon_prefix">Name</label>
        </div>
        <div class="input-field col s6">
            <i class="material-icons prefix">phone</i>
            <input id="icon_telephone" name="phone" type="number" class="validate">
            <label for="icon_telephone">Phone</label>
        </div>
    </div>
    <div class="input-field col s12">
        <input id="email" name="email" type="email" class="validate">
        <label for="email">Email</label>
        <span class="helper-text" data-error="wrong" data-success="right"></span>
    </div>
    <div class="input-field col s12">
        <h6>Enter your concern:</h6>
        <textarea name="body" id="body"></textarea>
    </div>
    <input type="submit" value="Submit" class="btn">
</form>