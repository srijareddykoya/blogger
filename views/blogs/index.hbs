<h4 id="heading" class="center">Public Blogs</h4>
<form action="/filter" method="POST" class="col s12" id="searchForm">
    <div class="input-field col s6">
        <i class="material-icons prefix">search</i>
        <input id="icon_prefix" type="text" name="search" class="validate">
        <label for="icon_prefix">Search blog</label>
    </div>
</form>
<div class="row">
    {{#each blogs}}
    <div class="col s12 m12 blogs">
        <div class="card center">
            <div class="card-image">
                {{#if ../user}}
                {{{editIcon user ../user _id}}}
                {{else}}
                <span></span>
                {{/if}}
            </div>
            <div class="card-content">
                <div class="row" id="card-content">
                    <span class="public-heading">Title: {{title}} <span id="fromNow">{{fromNow createdAt}}</span></span>
                    <div class="chip" id="chip">
                        <img src="{{user.image}}" alt="User Image">
                        <a href="/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <p>{{truncate (stripTags body) 300}}</p>
            </div>
            <div class="card-action center-align">
                <a href="/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No blogs to display</p>
    {{/each}}
</div>