<div class="row">
    <div class="col s12 m8">
        <h4 id="heading">{{blog.title}}
            {{#if user}}
            <small class="show-edit">{{{ editIcon blog.user user blog._id false }}}</small>
            {{else}}
            <span></span>
            {{/if}}
        </h4>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                <div class="divider"></div>
                {{{blog.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{blog.user.displayName}}</span>
                <img src="{{blog.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/user/{{blog.user._id}}">More From {{blog.user.givenName}}</a>
            </div>
        </div>
    </div>
</div>
{{#if user}}
<h5 id="comment-heading" class="center">Comments</h5>
<div class="card comments">
    <div class="card-content">
        <div class="card">
            <div class="card-content">
                <div class="row">
                    <div class="chip">
                        <img src="{{blog.user.image}}" alt="User Image">
                        <a href="/user/{{user._id}}">{{blog.user.displayName}}</a>
                    </div>
                    <div id="chip">{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</div>
                </div>
            </div>
        </div>
    </div>
</div>
<form action="/comments" method="post">
    <div class="row">
        <div class="col s12">
            <h6 class="comment-heading">Add a comment:</h6>
            <textarea name="comment" id="comment"></textarea>
        </div>
    </div>
</form>
{{else}}
<h6>Please login to comment down.</h6>
{{/if}}