<h4 id="heading" class="center">Filtered Blogs</h4>
<form action="/filter" method="POST" class="col s12" id="searchForm">
    <div class="input-field col s6">
        <i class="material-icons prefix">search</i>
        <input id="icon_prefix" type="text" name="search" class="validate">
        <label for="icon_prefix">Search blog</label>
    </div>
</form>
<div class="row">
    {{#each blogs}}
    <div class="col s12 m4 blogs">
        <div class="card center">
            <div class="card-image">
                {{#if ../user}}
                {{{editIcon user ../user _id}}}
                {{else}}
                <span></span>
                {{/if}}
            </div>
            <div class="card-content">
                <h5 class="">{{title}} <span id="fromNow">{{fromNow createdAt}}</span></h5>
                <p>{{truncate (stripTags body) 85}}</p>
                <div class="chip" id="chip-top">
                    <img src="{{user.image}}" alt="User Image">
                    <a href="/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>Sorry! We have no blogs on what you've searched. Feel Free to add.</p>
    {{/each}}
</div>