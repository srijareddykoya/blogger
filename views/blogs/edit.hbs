<h4 id="heading" class="center">Edit your blog.</h4>
<div class="row">
    <form action="/{{blog._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field col s12">
                <input id="title" type="text" name="title" value="{{blog.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                {{#select blog.status}}
                <select id="status" name="status">
                    <option value="Private" selected>Private</option>
                    <option value="Public">Public</option>
                </select>
                {{/select}}
                <label>Status</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <h5>Enter the content of your blog:</h5>
                <textarea name="body" id="body">{{blog.body}}</textarea>
            </div>
        </div>
        <div class=" row">
            <div class="col s12">
                <input type="submit" value="Save" class="btn">
                <a href=" /index/dashboard" id="cancel" class="btn red darken-3">Cancel</a>
            </div>
        </div>
    </form>
</div>